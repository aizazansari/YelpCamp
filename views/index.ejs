<% include partials/header %>

<div class="container">
<header class="jumbotron">
  <div class="container">
  <h1> Welcome to campgrounds page </h1>
  <p> so amaze campgrounds </p>
  <p> <a  class ="btn btn-primary btn-large" href="/campgrounds/new">Add new campground </a> </p>
    </div>
  </header>

<div class="row">
  <div class="col-lg-12">
    <h3> Our most popular campgrounds </h3>
    </div>
  </div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
<% campgrounds.forEach(function(campground){ %>
  <div class="col-md-4 col-sm-6 img-fluid">
    <figure class="figure img-thumbnail">
      <img src="<%= campground.image %>" class="figure-img img-fluid rounded">
      <figcaption class="figure-caption">
          <h4> <%= campground.name %> </h4>
        </figcaption>
      </figure>
      <p>
      <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More info</a>
      </p>
    </div>
<% }); %>
</div>
</div>
<% include partials/footer %>
